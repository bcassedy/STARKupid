<div class='row'>
  <h1>My Messages</h1>
  <div class='col-xs-8 col-xs-offset-2' id='messages'>
    <% if (messages.length === 0) { %>
      <p class='text-center'>You don't have any messages yet!</p>
    <% } %>
    <% messages.each(function (message) { %>
      <% if (message.get("read")) { %>
        <% var cssClass = "unread" %>
      <% } else { %>
        <% var cssClass = "read" %>
    <% } %>
    <div class='msg-row row'>
    <a href='#/messages/<%= message.id %>'>
      <div class='mini-photo col-xs-6'>
      <img 
        src="<%= message.escape('sender_photo') %>"
        class="img-responsive img-circle"
        >
      </div>
      <div class='msg-details col-xs-6 <%= cssClass %>'>
        <p class='msg-sender'><%= message.escape('sender') %></p>
        <p class='msg-title'><%= message.escape('title') %></p>
      </div>
    </a>
      <div class='button-delete hidden glyphicon glyphicon-trash'
        data-id='<%= message.id %>'>
      </div>
    </div>
    <br>
  <% }); %>
  </div>
</div>
