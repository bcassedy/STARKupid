<div class="modal fade" id='msg-modal'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <div class="hidden alert alert-success">Message Sent!</div>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Compose a Message</h4>
      </div>
      <div class="modal-body">
        <form id='msg-form' role='form'>
          <div class='form-group'>
            <label for="msg_title">Title</label>
            <input type="text" class='form-control' id='msg_title'name='message[title]'>
          </div>
          <div class='form-group'>
            <label for="msg_body">Body</label>
              <textarea name="message[body]" id='msg_body' class='form-control'></textarea>
          </div>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Send</button>
        </form>
      </div>
      <div class="modal-footer">
        
      </div>
    </div>
  </div>
</div>