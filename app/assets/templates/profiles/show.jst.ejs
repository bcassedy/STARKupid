<% var addOrRemove; %>
<% if (STARKupid.Collections.favorites.findWhere({username: profile.id})) { %>
  <% addOrRemove = 'Remove' %>
<% } else { %>
  <% addOrRemove = 'Add' %>
<% } %>
<% var photos = profile.photos(); %>
<% if (photos.length === 0) { %>
  <% var firstPhotoUrl = 'http://www.clker.com/cliparts/n/T/5/z/f/Y/image-missing-md.png'; %>
<% } else { %>
  <% var firstPhotoUrl = photos[0].url; %>
<% } %>
  <div class='col-xs-10 col-xs-offset-2'>
    <div class='photo' id='lead-photo'>
      <img
        src="<%= firstPhotoUrl %>"
        alt='Photo'
        height='190'
        width='190'>
    </div>
    <% _.each(photos.slice(1), function (photo) { %>
      <div class='photo sub-photo hidden'>
        <img
          src="<%= photo.url %>"
          alt='Photo'
          height='190'
          width='190'>
      </div>
    <% }); %>
    <div class='profile-header'>
      <h2><%= profile.escape('username') %></h2>
      <p><%= profile.escape('age') + ' | ' + profile.escape('gender') + ' | ' + profile.escape('location') %></p>
      <div><%= profile.escape('match_percentage') %> % Match</div>
    </div>
    <div id='send-msg' class='profile-header'>
      <div class='msg-button'>
      Send a Message
      </div>
      <div class='fav <%= addOrRemove %>'><%= addOrRemove %> Favorite</div>
    </div>

    <div class='panel panel-default'>
      <div class='panel-body'>
        <div>
          <h4>My self-summary</h4>
          <%= profile.escape('summary') %>
        </div>
        <div>
          <h4>What I'm doing with my life</h4>
          <%= profile.escape('life_direction') %>
        </div>
        <div>
          <h4>I'm really good at</h4>
          <%= profile.escape('skills') %>
        </div>
        <div>
          <h4>Favorite things</h4>
          <%= profile.escape('interests') %>
        </div>
        <div>
          <h4>I'm looking for</h4>
          <%= profile.escape('goals') %>
        </div>
      </div>
    </div>
  </div>